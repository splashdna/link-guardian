{
  "manifest_version": 2,
  "name": "Link Guardian",
  "version": "1.0",
  "description": "Blocks unsafe links in email messages.",
  "permissions": [
    "messagesRead",
    "storage",
    "scripting",
    "tabs",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    "options/options.html",
    "options/options.js"
  ],
  "applications": {
    "gecko": {
      "id": "link-guardian@example.com",
      "strict_min_version": "102.0"
    }
  }
}